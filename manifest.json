{
  "name": "CopyNote",
  "version": "1.0",
  "manifest_version": 2,
  "description": "CopyNote",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "<all_urls>"
  ],
  "icons":{
    "16": "CopyNote-logo.png",
    "48": "CopyNote-logo.png",
    "128": "CopyNote-logo.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["contextMenu.js"]
  }
}